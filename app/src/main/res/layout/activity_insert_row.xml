<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsertRowActivity"
    tools:layout_editor_absoluteX="11dp"
    tools:layout_editor_absoluteY="20dp">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:text="Add Guiders"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"

        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/userNameTxt"
                android:layout_width="328dp"
                android:layout_height="67dp"
                android:layout_marginBottom="10dp"
                android:hint="  User Name"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textColorHint="#68302D2D" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/userPhoneTxt"
                android:layout_width="289dp"
                android:layout_height="61dp"
                android:layout_marginBottom="10dp"
                android:hint="  User Phone"
                android:inputType="phone"
                android:textColor="#000000"
                android:textColorHint="#68302D2D"  />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="79dp">

            <EditText
                android:id="@+id/userEmailTxt"
                android:layout_width="351dp"
                android:layout_height="64dp"
                android:layout_marginBottom="10dp"
                android:hint="  User Email"
                android:inputType="textEmailAddress"
                android:textColor="#000000"
                android:textColorHint="#68302D2D"  />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="79dp">

            <EditText
                android:id="@+id/userExperiTxt"
                android:layout_width="351dp"
                android:layout_height="64dp"
                android:layout_marginBottom="10dp"
                android:hint="  User Experience"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textColorHint="#68302D2D"  />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="79dp">

            <EditText
                android:id="@+id/userLangTxt"
                android:layout_width="351dp"
                android:layout_height="64dp"
                android:layout_marginBottom="10dp"
                android:hint="  User Language"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textColorHint="#68302D2D"  />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="79dp">

            <EditText
                android:id="@+id/userAreaTxt"
                android:layout_width="351dp"
                android:layout_height="64dp"
                android:layout_marginBottom="10dp"
                android:hint="  User Guiding Areas"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textColorHint="#68302D2D"  />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="79dp">

            <EditText
                android:id="@+id/userDetailTxt"
                android:layout_width="351dp"
                android:layout_height="64dp"
                android:layout_marginBottom="10dp"
                android:hint="  Guider Details"
                android:inputType="textMultiLine"
                android:textColor="#000000"
                android:textColorHint="#68302D2D"  />
        </TableRow>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tableRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/insertRowFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="#7C94DE"
                android:onClick="insertRow"
                android:text="Add"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </TableLayout>




</androidx.constraintlayout.widget.ConstraintLayout>